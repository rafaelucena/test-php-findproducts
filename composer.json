{
    "name": "task/recruitment",
    "description": "Task for TME",
    "type": "project",
    "minimum-stability": "stable",
    "license": "MIT",
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "squizlabs/php_codesniffer": "^3"
    },
    "autoload": {
        "psr-4": {
            "Recruitment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Recruitment\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpunit": [
            "./vendor/bin/phpunit"
        ],
        "sniffer": [
            "./vendor/bin/phpcs -p"
        ]
    }
}